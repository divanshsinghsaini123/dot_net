
@model EmpModel;

@{
    ViewData["Title"] = "Manager";
    int identity = ViewBag.Id;
    string mess = ViewBag.Message;
}

@{
    string typeofsubmit = "Create Profile";
    if (mess == "Create")
    {
        <h2 class="text-center">Create a New Profile</h2>
    }
    else if (mess == "Edit")
    {
        typeofsubmit = "Save Changes";
        <h2 class="text-center ">Edit Profile for ID = @identity</h2>
    }
}


<div class="container mt-3  ">
    <form method="post" asp-action="Update" class="border p-3 rounded shadow-sm mx-auto w-50 ">
        
            <label for="Id" >Emp - ID</label>
        <input type="number" id="Id" name="Id" value="@identity" class="form-control"  readonly />

            <label for="Name" >Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
        
            <label for="Position" >Position</label>
            <input type="text" asp-for="Position" class="form-control" required />

            <label for="DateOfBirth" >Date of Birth</label>
            <input type="date" asp-for="DateOfBirth" class="form-control" required />

            <label for="Email" >Email</label>
            <input type="email" asp-for="Email" class="form-control " required />
        
            <label for="Salary" >Salary</label>
            <input type="number" asp-for="Salary" class="form-control" required />
        
            <label for="Department">Department</label>
            <input type="text" asp-for="Department" class="form-control " required />
       
            <label for="PhoneNo" class="form-label">Phone Number</label>
            <input type="tel" asp-for="PhoneNo" class="form-control " required />
        
            <label for="JoiningDate" class="form-label">Joining Date</label>
            <input type="date" asp-for="JoiningDate" class="form-control " required />
        
            <button class="btn btn-success my-4 px-3 py-1" type="submit">@typeofsubmit</button>
            <a asp-action="index" asp-controller="Employee" class="btn btn-info" >Back</a>
    </form>
</div>
